{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "global.d.ts"
    ],
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "stripInternal": true,
    "incremental": true,
    "allowJs": true,
  },
  "ts-node": {
    "files": true
  },
}